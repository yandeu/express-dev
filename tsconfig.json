{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2018",
    "module": "es2020",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
